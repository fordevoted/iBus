<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按壓時 -->
    <item android:state_pressed="true">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:radius="15dip" />
            <!--邊框-->
            <stroke android:width="2dip" android:color="#884CDCA1" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:startColor="#885CDCA1" android:endColor="#885CDCA1"  />
        </shape>
    </item>

    <!-- 預設時 -->
    <item android:color="@android:color/black">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <gradient android:angle="-90" android:startColor="#883ABA7F" android:endColor="#883ABA7F"  />
        </shape>
    </item>

</selector>